@model BiblioTECH.Models.Branch.AddBranchModel
@{
    ViewBag.Title = "Adaugare";
}


<div class="container container-margin-adjustment">
    <div class="jumbotron">
        <form enctype="multipart/form-data" asp-controller="Branch" asp-action="PlaceAdd" method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input asp-for="Name" class="form-control" placeholder="Denumire Campus">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <input asp-for="Address" class="form-control" placeholder="Adresa Campusului">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                </div>

                <div class="form-group col-md-4">
                    <input asp-for="Telephone" class="form-control" placeholder="Numar de Contact">
                    <span asp-validation-for="Telephone" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                </div>
            </div>
            <div class="form-row">

                <div class="form-group">
                    @Html.LabelFor(a => a.Image)
                    <input asp-for="Image" class="form-control-file" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <textarea asp-for="Description" placeholder="Descriere a Campusulusi"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div>
                <button type="submit" class="btn btn-success btn-lg">Adaugă </button>
            </div>
        </form>
    </div>
</div>





