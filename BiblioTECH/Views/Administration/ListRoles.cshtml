@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "Roluri";
}

<h1>All Roles</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole"
       asp-controller="administration">Adaugati un nou rol</a>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a asp-controller="Administration" asp-action="EditRole"
                   asp-route-id="@role.Id" class="btn btn-primary">
                    Editati
                </a>
                <a href="#" class="btn btn-danger">Stergeti</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            Niciun rol creat...
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Doriti sa creati un rol?
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="administration" asp-action="CreateRole">
                Creaza rol
            </a>
        </div>
    </div>
}